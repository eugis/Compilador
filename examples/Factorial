
int num, result, i;

{
    i = 1;
    result = 1;
    num = read("Ingrese el número:");
    if(num >= 0){
        while(i < num){
            result = result * i;
            i = i + 1;
        }
        write("El factorial calculado es:");
        write(result);
    }else{
        write("El número ingresado no es válido");
    }
    write("\n");
}